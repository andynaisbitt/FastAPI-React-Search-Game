      <div class="footer-buttons">
        <button id="resetGame">Reset Game</button>
        <button id="shareGame">Share Game</button>
      </div>
    </div>
  </div>
</footer>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const resetGameBtn = document.getElementById('resetGame');
    const shareGameBtn = document.getElementById('shareGame');

    if (resetGameBtn) {
      resetGameBtn.addEventListener('click', resetGame);
    }

    if (shareGameBtn) {
      shareGameBtn.addEventListener('click', shareGame);
    }
  });

  function resetGame() {
    if (typeof window.restartGame === 'function') {
      window.restartGame();
    } else {
      console.error('restartGame function is not defined');
      location.reload();
    }
  }

  function shareGame() {
    const shareUrl = window.location.href;
    const shareMessage = 'Check out this fun game on JustFuckingGoogleIt! Can you beat my score?';
    window.open(`https://twitter.com/intent/tweet?url=${encodeURIComponent(shareUrl)}&text=${encodeURIComponent(shareMessage)}`, '_blank');
  }
</script>