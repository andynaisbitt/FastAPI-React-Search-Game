# JFGI - Just Fucking Google It
# Environment Configuration Template

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
NODE_ENV=development                    # development | production
PORT=3000                               # Server port

# ============================================================================
# SECURITY SECRETS
# ============================================================================
# Generate strong secrets using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

SESSION_SECRET=your-super-secret-session-key-change-this-in-production-min-32-chars
COOKIE_SECRET=your-super-secret-cookie-key-change-this-in-production-min-32-chars

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# SQLite (Development)
DB_PATH=./data/urls.db

# PostgreSQL (Production) - Uncomment when migrating
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=jfgi_production
# DB_USER=jfgi_user
# DB_PASSWORD=your-database-password-here
# DB_SSL=true
# DB_POOL_MIN=2
# DB_POOL_MAX=10

# ============================================================================
# URL SHORTENER CONFIGURATION
# ============================================================================
SHORT_CODE_LENGTH=6                     # Length of generated short codes
URL_EXPIRATION_DAYS=365                # URL expiration (0 = never expire)
MAX_URL_LENGTH=2048                    # Maximum allowed URL length
RATE_LIMIT_URLS_PER_HOUR=3             # URLs per IP per hour

# ============================================================================
# GAME CONFIGURATION
# ============================================================================
DEFAULT_GAME_TIME_SECONDS=180          # Default timer (3 minutes)
MAX_HINTS=5                            # Maximum hints per game
HINT_PENALTY_SECONDS=15                # Time penalty per hint
POINTS_CORRECT_ANSWER=10               # Points for correct answer
POINTS_WRONG_ANSWER=-5                 # Points deducted for wrong answer

# ============================================================================
# GOOGLE SEARCH API (Optional - for search proxy)
# ============================================================================
# Get API key: https://developers.google.com/custom-search/v1/overview
GOOGLE_SEARCH_API_KEY=
GOOGLE_SEARCH_ENGINE_ID=

# Alternative: SerpAPI (easier to set up)
# Get API key: https://serpapi.com/
SERP_API_KEY=

# ============================================================================
# GOOGLE ADSENSE (Monetization)
# ============================================================================
# Get AdSense ID: https://www.google.com/adsense/
ADSENSE_CLIENT_ID=ca-pub-XXXXXXXXXXXXXXXX
ADSENSE_ENABLED=false                  # Set to true when ready

# ============================================================================
# HCAPTCHA (Anti-Spam)
# ============================================================================
# Get keys: https://www.hcaptcha.com/
HCAPTCHA_SITE_KEY=
HCAPTCHA_SECRET_KEY=
HCAPTCHA_ENABLED=false                 # Set to true when ready

# ============================================================================
# ANALYTICS (Optional)
# ============================================================================
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX       # Google Analytics 4 ID
ANALYTICS_ENABLED=false

# ============================================================================
# EMAIL (For abuse reports, notifications)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@jfgi.app
ADMIN_EMAIL=admin@jfgi.app

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_LEADERBOARD=true
ENABLE_ABUSE_REPORTING=true
ENABLE_CENSORED_MODE=true              # "Just Try Googling It" mode
ENABLE_BART_ANIMATION=false            # Bart Simpson animation (coming soon)

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_WINDOW_MS=900000            # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100            # Max requests per window
RATE_LIMIT_WHITELIST=127.0.0.1         # Comma-separated IPs to whitelist

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=info                         # error | warn | info | debug
LOG_TO_FILE=true
LOG_FILE_ERROR=./logs/error.log
LOG_FILE_COMBINED=./logs/combined.log

# ============================================================================
# ADMIN DASHBOARD
# ============================================================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-strong-password-min-12-chars
ADMIN_SESSION_TIMEOUT_HOURS=2

# ============================================================================
# DEPLOYMENT
# ============================================================================
DOMAIN=localhost                       # Production domain (e.g., jfgi.app)
BASE_URL=http://localhost:3000         # Full base URL

# Production settings (when deploying)
# DOMAIN=jfgi.app
# BASE_URL=https://jfgi.app
# SESSION_COOKIE_SECURE=true
# HSTS_ENABLED=true
